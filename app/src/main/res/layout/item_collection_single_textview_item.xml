<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_collection_list_single_textview_item_image"
        android:layout_marginStart="@dimen/normal_margin"
        android:layout_marginEnd="@dimen/normal_margin"
        android:layout_marginTop="@dimen/small_margin"
        android:layout_marginBottom="@dimen/small_margin"
        tools:src="@drawable/album_cover"
        android:layout_width="@dimen/collection_list_item_image_size"
        android:layout_height="@dimen/collection_list_item_image_size" />

    <TextView
        android:id="@+id/tv_collection_list_single_textview_item_album_name"
        style="@style/collection_list_item_title"
        android:layout_marginStart="@dimen/standard_text_size"
        android:layout_marginEnd="@dimen/normal_margin"
        android:layout_gravity="center"
        tools:text="@string/album_name"/>

</LinearLayout>