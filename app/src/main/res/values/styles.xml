<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:windowBackground">@color/colorPrimaryDark</item>
    </style>

    <!-- AUTH -->

    <style name="auth_main_header">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/auth_main_header_size</item>
    </style>

    <style name="auth_edit_text_hint">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/auth_label_size</item>
    </style>

    <style name="auth_text_input_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/normal_margin</item>
    </style>

    <style name="auth_text_input_edit_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="auth_edit_text_helper_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:color">@android:color/white</item>
        <item name="android:textSize">@dimen/auth_helper_text</item>
    </style>

    <style name="auth_text_input_layout_error">
        <item name="android:textColor">@color/googleRed</item>
    </style>

    <style name="auth_method_picker_btn">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/auth_btn_vertical_padding</item>
    </style>

    <style name="auth_submit_btn">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/auth_btn_vertical_padding</item>
        <item name="android:paddingBottom">@dimen/auth_btn_vertical_padding</item>
        <item name="android:paddingStart">@dimen/auth_btn_horizontal_padding</item>
        <item name="android:paddingEnd">@dimen/auth_btn_horizontal_padding</item>
    </style>

    <style name="auth_text_btn" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorPrimaryLight</item>
    </style>

    <!-- PROFILE -->

    <style name="secondary_header">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/secondary_header_text</item>
    </style>

    <style name="profile_info">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/standard_text_size</item>
    </style>

    <!-- ERROR -->

    <style name="error_view_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">@dimen/tiny_margin</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/auth_label_size</item>
    </style>

    <style name="error_view_subtitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">@dimen/small_margin</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/standard_text_size</item>
    </style>

    <!-- MAIN -->

    <style name="suggestion_list_item_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/standard_text_size</item>
    </style>

    <style name="suggestion_list_item_subtitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">@dimen/auth_helper_text</item>
    </style>

    <style name="collection_list_item_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/secondary_header_text</item>
    </style>

    <style name="collection_list_item_subtitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">@dimen/standard_text_size</item>
    </style>

    <style name="horizontal_recycler_view">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/normal_margin</item>
        <item name="android:paddingBottom">@dimen/normal_margin</item>
        <item name="android:paddingStart">@dimen/small_margin</item>
        <item name="android:paddingEnd">@dimen/small_margin</item>
    </style>

</resources>